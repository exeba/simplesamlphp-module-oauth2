{
    "name": "exeba/simplesamlphp-module-oauth2",
    "description": "A SimpleSAMLphp module adding support for the OAuth2 protocol.",
    "type": "simplesamlphp-module",
    "keywords": [ "oauth2" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Sergio GÃ³mez",
            "email": "sergio@uco.es"
        },
        {
            "name": "Sebastiano Degan",
            "email": "sebdeg87@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "SimpleSAML\\Module\\oauth2\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleSAML\\Test\\Module\\oauth2\\": "tests/src"
        }
    },
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "simplesamlphp/composer-module-installer": "~1.0",
        "league/oauth2-server": "~8.1",
        "nette/forms": "~3.0",
        "laminas/laminas-diactoros": "^2.4",
        "symfony/psr-http-message-bridge": "^2.0",
        "psr/http-server-middleware": "^1.0",
        "doctrine/orm": "^2.10"
    },
    "require-dev": {
        "simplesamlphp/simplesamlphp"               : ">1.19.1",
        "phpunit/phpunit": "^9.0"
    },
    "config": {
        "allow-plugins": {
            "simplesamlphp/composer-module-installer": true
        }
    }
}
